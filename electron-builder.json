{
  "appId": "com.electron-course.prepare",
  "files": ["dist-electron", "dist-react"],
  "extraResources": [
    "dist-electron/preload.cjs",
    "src/assets/**",
    "dist-electron/db/**",
    {
      "from": "dist-electron/db/migrations",
      "to": "migrations"
    },
     {
    "from": "app.sqlite",
    "to": "app.sqlite"
  }
  ],
  "icon": "./desktopIcon.png",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["portable", "msi"]
  }
}
